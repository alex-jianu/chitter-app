<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS -->
    <link href="<%= url('/style.css') %>" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <header>
      <div>
        <h1>Chitter Live Chat</h1>
      </div>
      <div>
        <h3>~<%= @user.name %>(<%= @user.username %>)</h3>
      </div>
    </header>
    <div class="chat col-7 col-s-9 col-xs-11">
      <div class="peep">
        <p class="peep"><span>~<%= @peep.author%> peep'd
          </span><span class="peep-time"><%= @peep.time.split(" ")[0]%></span></p>
        <p class="peep">
          <span class="peep-content"><%= @peep.content%></span><span class="peep-time"><%= @peep.time.split(" ")[1]%></span>
        </p>
      </div>
      <% @replies.each do |reply|%>
        <div class="peep reply c<%= (reply.id.to_i % 3 + 1).to_s %> col-xs-11 col-s-10 col-9">
          <p class="peep"><span>~<%= reply.author%> peep'd
            </span><span class="peep-time"><%= reply.time.split(" ")[0]%></span></p>
          <p class="peep">
            <span class="peep-content"><%= reply.content%></span><span class="peep-time"><%= reply.time.split(" ")[1]%></span>
          </p>
        </div>
      <% end %>
    </div>
    <footer>
      <div class="options">
        <% if @user.name == "Anonymous" %>
          <div class="send">
            <form action="/" method="GET">
              <button type="submit">Return To Live Chat</button>
            </form>
            <form action="/peeps/<%=@peep.id%>/reply" method="GET">
              <button type="submit">Reply To Peep</button>
            </form>
          </div>
          <div class="log">
            <form action="/signup" method="GET">
              <button type="submit">Sign Up</button>
            </form>
            <form action="/login" method="GET">
              <button type="submit">Log In</button>
            </form>
          <% else %>
            <div class="send">
              <form action="/" method="GET">
                <button type="submit">Return To Live Chat</button>
              </form>
              <form action="/peeps/<%=@peep.id%>/reply" method="GET">
                <button type="submit">Reply To Peep</button>
              </form>
            </div>
            <div class="log">
              <form action="/logout" method="GET">
                <button type="submit">Log Out</button>
              </form>
            </div>
          <% end %>
        </div>
      </div>
    </footer>
  </body>
</html>
